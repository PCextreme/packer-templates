{
    "variables": {
        "name": "centos-8",
        "url": "http://compute.o.auroraobjects.eu/iso/CentOS-8.5.2111-x86_64-boot.iso",
        "iso_checksum": "sha256:9602c69c52d93f51295c0199af395ca0edbe35e36506e32b8e749ce6c8f5b60a",
        "boot_command": "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart/centos-8.ks<enter><wait>"
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "vm_name": "{{user `name`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "cpus": 2,
            "memory": 2048,
            "disk_size": "8G",
            "disk_interface": "virtio-scsi",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_command": "{{user `boot_command`}}",
            "communicator": "ssh",
            "vnc_bind_address": "[::]",
            "ssh_wait_timeout": "30m",
            "ssh_username": "root",
            "ssh_password": "DrQYKBzyU5t47sxg",
            "http_directory": "files",
            "http_port_min": 8000,
            "http_port_max": 8100,
            "output_directory": "build_{{user `name`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/generic/cloud-init.cfg",
            "destination": "/etc/cloud/cloud.cfg"
        },
        {
            "type": "file",
            "source": "files/generic/watchdog.conf",
            "destination": "/etc/watchdog.conf"
        },
        {
            "type": "file",
            "source": "files/generic/99-disable-ipv6-tempaddr.conf",
            "destination": "/etc/sysctl.d/99-disable-ipv6-tempaddr.conf"
        },
        {
            "type": "file",
            "source": "files/centos/90-dns-none.conf",
            "destination": "/etc/NetworkManager/conf.d/90-dns-none.conf"
        },
        {
            "type": "file",
            "source": "files/centos/90-dhcp-client.conf",
            "destination": "/etc/NetworkManager/conf.d/90-dhcp-client.conf"
        },
        {
            "type": "file",
            "source": "files/centos/grub",
            "destination": "/etc/default/grub"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/centos-8/post.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "shell",
            "inline":
            [
              "fstrim -v /"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "shell-local",
                "command": "mv build_{{user `name`}}/{{user `name`}} build_{{user `name`}}/{{user `name`}}.qcow2"
            },
            {
                "type": "artifice",
                "files": [
                    "build_{{user `name`}}/{{user `name`}}.qcow2"
                ]
            },
            {
                "type": "checksum",
                "checksum_types": [
                    "sha256"
                ],
                "output": "build_{{user `name`}}/{{user `name`}}.checksum"
            },
            {
                "type": "manifest",
                "output": "build_{{user `name`}}/{{user `name`}}.json",
                "strip_path": true,
                "custom_data": {
                    "oscategory": "{{split (user `name`) \"-\" 0}}",
                    "osversion": "{{split (user `name`) \"-\" 1}}",
                    "template_slug": "{{user `name`}}"
                }
            }
        ]
    ]
}
