{
    "variables":
    {
        "ncpu": "",
        "template_name": "",
        "disk_size": ""
    },
    "builders":
    [
        {
            "type": "qemu",
            "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.0.0-amd64-netinst.iso",
            "iso_checksum_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/SHA1SUMS",
            "iso_checksum_type": "sha1",
            "output_directory": "packer_output",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "/sbin/shutdown -hP now",
            "disk_size": "{{user `disk_size`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "vnc_bind_address": "0.0.0.0",
            "headless": "true",
            "qemuargs":
            [
                [ "-smp" , "{{user `ncpu`}}" ],
                [ "-m", "1024M" ]
            ],
            "http_directory": "../../httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "root",
            "ssh_password": "installer",
            "ssh_port": 22,
            "ssh_wait_timeout": "15m",
            "vm_name": "{{user `template_name`}}",
            "net_device": "virtio-net",
            "disk_interface": "virtio-scsi",
            "disk_cache": "unsafe",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_wait": "15s",
            "boot_command":
            [
                "<esc><wait5>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/{{user `template_name`}}.preseed ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "keyboard-configuration/xkb-keymap=us ",
                "netcfg/get_hostname={{user `template_name`}} ",
                "netcfg/get_domain=auroracompute.com ",
                "fb=false debconf/frontend=noninteractive ",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "<enter>"
            ]
        }
    ],
    "provisioners":
    [
        {
            "type": "file",
            "source": "files/99-disable-ipv6-tempaddr.conf",
            "destination": "/etc/sysctl.d/99-disable-ipv6-tempaddr.conf"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/pre.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "file",
            "source": "files/99_cloudstack.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/99_cloudstack.cfg"
        },
        {
            "type": "file",
            "source": "../../httpdir/meta.data",
            "destination": "/var/opt/aurora-build-metadata.txt"
        },
        {
            "type": "file",
            "source": "files/watchdog.conf",
            "destination": "/etc/watchdog.conf"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/post.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "shell",
            "inline":
            [
              "fstrim -v /"
            ]
        }
    ]
}
