{
    "variables":
    {
        "ncpu": "",
        "template_name": "",
        "disk_size": ""
    },
    "builders":
    [
        {
            "type": "qemu",
            "iso_url": "https://cloudstack.o.auroraobjects.eu/iso/CentOS-7-x86_64-NetInstall-1810.iso",
            "iso_checksum": "19d94274ef856c4dfcacb2e7cfe4be73e442a71dd65cc3fb6e46db826040b56e",
            "iso_checksum_type": "sha256",
            "output_directory": "packer_output",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "systemctl poweroff",
            "disk_size": "{{user `disk_size`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "vnc_bind_address": "0.0.0.0",
            "headless": "true",
            "qemuargs":
            [
                [ "-smp" , "{{user `ncpu`}}" ],
                [ "-m", "1024M" ]
            ],
            "http_directory": "../../httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "root",
            "ssh_password": "installer",
            "ssh_port": 22,
            "ssh_wait_timeout": "30m",
            "vm_name": "{{user `template_name`}}",
            "net_device": "virtio-net",
            "disk_interface": "virtio-scsi",
            "disk_cache": "unsafe",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_command":
            [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart/{{user `template_name`}}.ks<enter><wait>"
            ]
        }
    ],
    "provisioners":
    [
        {
            "type": "shell",
            "scripts":
            [
                "scripts/pre.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "file",
            "source": "files/99_cloudstack.cfg",
            "destination": "/etc/cloud/cloud.cfg.d/99_cloudstack.cfg"
        },
        {
            "type": "file",
            "source": "../../httpdir/meta.data",
            "destination": "/var/opt/aurora-build-metadata.txt"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/post.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "file",
            "source": "files/watchdog.conf",
            "destination": "/etc/watchdog.conf"
        },
        {
            "type": "shell",
            "inline":
            [
              "fstrim -v /"
            ]
        }
    ]
}
